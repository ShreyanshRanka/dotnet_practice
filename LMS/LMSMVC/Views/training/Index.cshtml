@{
    ViewData["Title"] = "Home Page";
    List<Training> list = ViewBag.list;
}

<div class="text-center">
  <table class="table table-dark table-striped">
    <thead>
        <tr scope="col">
            <th>Id</th>
            <th>Topic</th>
            <th>Description</th>
            <th>Faculty</th>
            <th>Location</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in list)
        {
            <tr scope="row">
                <td>@item.Id</td>
                <td>@item.Topic</td>
                <td>@item.Descriptions</td>
                <td>@item.Faculty</td>
                <td>@item.Location</td>
                <td><button class="btn btn-warning btn-sm"><a asp-controller="Training" asp-action="update" asp-route-id="@item.Id">Update</a></button> &nbsp;
                <button class="btn btn-danger btn-sm"><a asp-controller="Training" asp-action="delete" asp-route-id="@item.Id">Delete</a></button></td>
            </tr>
        }
    </tbody>
  </table> <br>
  <button class="btn btn-info btn-sm"><a asp-controller="Training" asp-action="create">Create</a></button>
</div>
